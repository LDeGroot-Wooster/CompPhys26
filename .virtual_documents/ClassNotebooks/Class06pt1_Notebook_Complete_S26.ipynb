# constants 
wavelength = 5.0 # in cm 
k = 2*np.pi/wavelength # wave vector 
h0 = 1.0 # amplitude in cm 
separation = 20 # cm separation of circles 

# set up grid information 
side = 100 # side of pond in cm 
points = 500 # number of elements per side of the array 
spacing = side/points # spacing of points in grid in physical units 

# calculate the positions of the centers of each circle 
x1 = side/2 - separation/2
y1 = side/2
x2 = side/2 + separation/2
y2 = side/2

# create array to store the heights of the superpositioned waves
h = np.zeros([points,points],float)

# calculate the heights 
for i in range(points): # y-values
    y = i*spacing
    for j in range(points): # x-values
        x = j*spacing
        r1 = np.sqrt((x-x1)**2+(y-y1)**2)
        r2 = np.sqrt((x-x2)**2+(y-y2)**2)
        h1 = h0*np.sin(k*r1)
        h2 = h0*np.sin(k*r2)
        h[i,j] = h1 + h2

# make the density plot 
plt.imshow(h, origin="lower", extent=[0,side,0,side])
plt.bone()
#plt.flag()
plt.xlabel("x (cm)")
plt.colorbar(label="heights (cm)")
plt.show()

        





# let's create an array of our own:

n_vals = 50
theta = np.linspace(0,3*np.pi, n_vals)
x_vals = 5.0*np.sin(theta)
y_vals = 5.0*np.sin(theta)
#y_vals = 5.0*np.sin(np.radians(theta)+np.pi/4)

addition = np.zeros((n_vals,n_vals), float)
for i in range(n_vals):
    for j in range(n_vals):
        addition[i,j] = x_vals[j]+y_vals[i]

plt.imshow(addition,origin="lower", cmap='bone')
plt.colorbar()


